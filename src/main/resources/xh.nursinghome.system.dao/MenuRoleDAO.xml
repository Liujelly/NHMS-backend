<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xh.nursinghome.system.dao.MenuRoleDAO">
    <resultMap id="menuRoleResultMap" type="xh.nursinghome.system.model.MenuRole">
        <id column="id" property="id"/>
        <result column="menu_id" property="menuId"/>
        <result column="role_id" property="roleId"/>
    </resultMap>
    <select id="findByRoleId" resultMap="menuRoleResultMap">
        select * from menu_role where role_id=#{roleId}
    </select>
    <insert id="insertMenuRole" parameterType="xh.nursinghome.system.model.MenuRole">
        insert into menu_role (menu_id,role_id) VALUES (#{menuId},#{roleId})
    </insert>
    <delete id="deleteByRoleId">
        delete from menu_role where role_id=#{roleId}
    </delete>

</mapper>